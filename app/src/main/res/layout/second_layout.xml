<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewJornada"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:id="@+id/relativeLayoutJornada"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/level1"
            android:background="@mipmap/ic_level1"
            android:padding="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unlockedleve21"
            android:background="@mipmap/ic_lock"
            android:padding="40dp"
            android:layout_marginTop="72dp"
            android:layout_below="@+id/imageView2"
            android:layout_toLeftOf="@+id/textView3"
            android:layout_toStartOf="@+id/textView3" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unlockedleve22"
            android:background="@mipmap/ic_lock"
            android:padding="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_alignTop="@+id/unlockedleve21"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fase 1"
            android:id="@+id/textView3"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="24dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:background="@mipmap/ic_barra"
            android:paddingRight="600dp"
            android:layout_below="@+id/level1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fase 2"
            android:id="@+id/textView4"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:background="@mipmap/ic_barra"
            android:paddingRight="600dp"
            android:layout_below="@+id/unlockedleve21"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unlockedlevel31"
            android:background="@mipmap/ic_lock"
            android:padding="40dp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fase 3"
            android:id="@+id/textView5"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/imageView3"
            android:layout_toLeftOf="@+id/unlockedleve22"
            android:layout_toStartOf="@+id/unlockedleve22" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unlockedlevel32"
            android:background="@mipmap/ic_lock"
            android:padding="40dp"
            android:layout_marginTop="38dp"
            android:layout_below="@+id/unlockedlevel31"
            android:layout_alignLeft="@+id/unlockedleve21"
            android:layout_alignStart="@+id/unlockedleve21" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unlockedlevel33"
            android:background="@mipmap/ic_lock"
            android:padding="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_alignTop="@+id/unlockedlevel32"
            android:layout_toRightOf="@+id/textView5"
            android:layout_toEndOf="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="15dp"
            android:id="@+id/textView9"
            android:layout_toLeftOf="@+id/level1"
            android:layout_alignTop="@+id/level1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="15dp"
            android:id="@+id/textView10"
            android:layout_toLeftOf="@+id/unlockedleve21"
            android:layout_alignTop="@+id/unlockedleve21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="15dp"
            android:id="@+id/textView11"
            android:layout_toLeftOf="@+id/unlockedleve22"
            android:layout_alignTop="@+id/unlockedleve22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="15dp"
            android:id="@+id/textView12"
            android:layout_toLeftOf="@+id/unlockedlevel31"
            android:layout_alignTop="@+id/unlockedlevel31" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="15dp"
            android:id="@+id/textView13"
            android:layout_toLeftOf="@+id/unlockedlevel32"
            android:layout_alignTop="@+id/unlockedlevel32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="3"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="15dp"
            android:id="@+id/textView14"
            android:layout_toLeftOf="@+id/unlockedlevel33"
            android:layout_alignTop="@+id/unlockedlevel33" />

    </RelativeLayout>
</ScrollView>